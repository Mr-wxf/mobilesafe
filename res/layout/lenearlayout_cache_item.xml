<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_need_clear_app_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_need_clear_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_need_clear_app_icon"
        android:text="应用名称"
        android:textSize="18sp"
        android:textColor="#000"  />

    <TextView
        android:id="@+id/tv_cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_need_clear_app_name"
        android:layout_toRightOf="@+id/iv_need_clear_app_icon"
        android:text="内存大小"
        android:textSize="18sp"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/select_blacknumber_delete_bg"
        />

</RelativeLayout>